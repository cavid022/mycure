{% extends 'admin/layout.twig' %} 
{% block content %}

    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header"><i class="icon_pencil-edit"></i> Sığorta</h3>
                    <ol class="breadcrumb">
                        <li><i class="fa fa-home"></i><a href="">Əsas Səhifə</a></li>
                        <li><i class="icon_pencil-edit"></i>Sığorta</li>

                    </ol>
                </div>
            </div>

            <!-- Title area -->
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">

                        <table class="table table-striped table-advance table-hover">
                            <tbody>
                            <tr>
                                <th>Başlıq</th>
                                <th>Mətn</th>
                                <th>Şirkət</th>
                                <th>Tip</th>
                                <th>Qiymət</th>
                                <th>Redaktə</th>
                            </tr>

                            {% for insurance in insurances %}
                            <tr>
                                <td>{{ insurance.title }}</td>
                                <td>{{ insurance.content|striptags|raw }}</td>
                                <td>{{ insurance.company }}</td>
                                <td>{{ insurance.type |insurance_type}}</td>
                                <td>{{ insurance.price }} {{ insurance.currency |currency }}</td>
                                <td>
                                    <div class="btn-group">
                                        <a class="btn btn-primary" href="{{ path_for('admin.insurances.update', {id: insurance.id} ) }}"><i class="icon_pencil-edit"></i></a>
                                        <a class="btn btn-danger" href="{{ path_for('admin.insurances.delete.post', {id: insurance.id} ) }}"><i class="icon_minus_alt2"></i></a>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
            <!--Pagination area-->
            <section class="panel">
                <div class="panel-body">
                    <div class="text-center">
                        {{ insurances.links |raw }}
                    </div>
                </div>
            </section>
        </section>
    </section>


{% endblock %}