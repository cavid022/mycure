{% extends 'admin/layout.twig' %} 
{% block content %}

    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header"><i class="icon_pencil-edit"></i> Analizlər</h3>
                    <ol class="breadcrumb">
                        <li><i class="fa fa-home"></i><a href="">Əsas Səhifə</a></li>
                        <li><i class="icon_pencil-edit"></i>Analizlər</li>

                    </ol>
                </div>
            </div>

            <!-- Title area -->
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">

                        <table class="table table-striped table-advance table-hover">
                            <tbody>
                            <tr>
                                <th>Kim üçün</th>
                                <th>Kim tərəfindən</th>
                                <th>Başlıq</th>
                                <th>Redaktə</th>
                            </tr>

                            {% for result in results %}
                            <tr>
                                <td>{{ result.user.fullname() }}</td>
                                <td>{{ result.doctor.fullname()  }}</td>
                                <td>{{ result.title}}</td>
                                <td>
                                    <div class="btn-group">
                                        <a class="btn btn-success" target="_blank" href="{{ base_url() }}/uploads/results/{{ result.file_name }}"><i class="arrow_carrot-2down"></i></a>
                                        <a class="btn btn-danger" href="{{ path_for('admin.results.delete.post', {id: result.id} ) }}"><i class="icon_minus_alt2"></i></a>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
            <!--Pagination area-->
            <section class="panel">
                <div class="panel-body">
                    <div class="text-center">
                        {{ results.links |raw }}
                    </div>
                </div>
            </section>
        </section>
    </section>


{% endblock %}