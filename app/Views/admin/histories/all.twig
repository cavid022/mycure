{% extends 'admin/layout.twig' %} 
{% block content %}

    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header"><i class="icon_pencil-edit"></i> Tarixçələr</h3>
                    <ol class="breadcrumb">
                        <li><i class="fa fa-home"></i><a href="">Əsas Səhifə</a></li>
                        <li><i class="icon_pencil-edit"></i>Tarixçələr</li>

                    </ol>
                </div>
            </div>

            <!-- Title area -->
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">

                        <table class="table table-striped table-advance table-hover">
                            <tbody>
                            <tr>
                                <th>Xəstə</th>
                                <th>Xəstəlik</th>
                                <th>Həkim</th>
                                <th>Başlama tarixi</th>
                                <th>Bitmə tarixi</th>
                                <th>Simptomlar</th>
                                <th>Detallar</th>
                                <th>Redaktə</th>
                            </tr>

                            {% for history in histories %}
                            <tr>
                                <td>{{ history.user.fullname() }}</td>
                                <td>{{ history.illness.title  }}</td>
                                <td>{{ history.doctor.fullname()  }}</td>
                                <td>{{ history.start_date}}</td>
                                <td>{{ history.end_date}}</td>
                                <td>{{ history.simptoms}}</td>
                                <td>{{ history.details}}</td>
                                <td>
                                    <div class="btn-group">
                                        <a class="btn btn-danger" href="{{ path_for('admin.histories.delete.post', {id: history.id} ) }}"><i class="icon_minus_alt2"></i></a>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
            <!--Pagination area-->
            <section class="panel">
                <div class="panel-body">
                    <div class="text-center">
                        {{ histories.links |raw }}
                    </div>
                </div>
            </section>
        </section>
    </section>


{% endblock %}