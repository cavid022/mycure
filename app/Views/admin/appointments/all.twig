{% extends 'admin/layout.twig' %} 
{% block content %}

    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header"><i class="icon_pencil-edit"></i> Təyinatlar</h3>
                    <ol class="breadcrumb">
                        <li><i class="fa fa-home"></i><a href="">Əsas Səhifə</a></li>
                        <li><i class="icon_pencil-edit"></i>Təyinatlar</li>

                    </ol>
                </div>
            </div>

            <!-- Title area -->
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">

                        <table class="table table-striped table-advance table-hover">
                            <tbody>
                            <tr>
                                <th>Kimdən</th>
                                <th>Kimə</th>
                                <th>Tarix</th>
                                <th>Vaxt</th>
                                <th>Redaktə</th>
                            </tr>

                            {% for appointment in appointments %}
                            <tr>
                                <td>{{ appointment.user.fullname() }}</td>
                                <td>{{ appointment.doctor.fullname()  }}</td>
                                <td>{{ appointment.date}}</td>
                                <td>{{ appointment.time }}</td>
                                <td>
                                    <div class="btn-group">
                                        <a class="btn btn-danger" href="{{ path_for('admin.appointments.delete.post', {id: appointment.id} ) }}"><i class="icon_minus_alt2"></i></a>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
            <!--Pagination area-->
            <section class="panel">
                <div class="panel-body">
                    <div class="text-center">
                        {{ appointments.links |raw }}
                    </div>
                </div>
            </section>
        </section>
    </section>


{% endblock %}