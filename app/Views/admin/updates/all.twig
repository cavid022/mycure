{% extends 'admin/layout.twig' %} 
{% block content %}


    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header"><i class="icon_pencil-edit"></i> Xəbərlər</h3>
                    <ol class="breadcrumb">
                        <li><i class="fa fa-home"></i><a href="">Əsas Səhifə</a></li>
                        <li><i class="icon_pencil-edit"></i>Xəbərlər</li>

                    </ol>
                </div> 
            </div>
{{ remember_me.checkRememberMe }}
            <!-- Title area -->
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">

                        <table class="table table-striped table-advance table-hover">
                            <tbody>
                            <tr>
                                <th>Başlıq</th>
                                <th>Mətn</th>
                                <th>Teq</th>
                                <th>Müəllif</th>
                                <th>Baxış sayı</th>
                                <th>Şəkil</th>
                                <th>Redaktə</th>
                            </tr>

                            {% for update in updates %}
                            <tr>
                                <td>{{ update.title }}</td>
                                <td>{{ update.content|striptags|raw  }}</td>
                                <td>{{ update.tag.title }}</td>
                                <td>{{ update.author.fullname() }}</td>
                                <td>{{ update.view_count }}</td>
                                <td><img src="{{ base_url() }}/uploads/updates/{{ update.image }}" style="height: 50px"></img></td>
                                <td>
                                    <div class="btn-group">
                                        <a class="btn btn-primary" href="{{ path_for('admin.updates.update', {id: update.id} ) }}"><i class="icon_pencil-edit"></i></a>
                                        <a class="btn btn-danger" href="{{ path_for('admin.updates.delete.post', {id: update.id} ) }}"><i class="icon_minus_alt2"></i></a>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
            <!--Pagination area-->
            <section class="panel">
                <div class="panel-body">
                    <div class="text-center">
                        {{ updates.links |raw }}
                    </div>
                </div>
            </section>
        </section>
    </section>


{% endblock %}