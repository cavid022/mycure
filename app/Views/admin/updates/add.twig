{% extends 'admin/layout.twig' %} 
{% block content %}
<!--main content start-->
<section id="main-content">
<section class="wrapper">
<div class="row">
	<div class="col-lg-12">
		<h3 class="page-header"><i class="icon_pencil_alt"></i> Xəbər Əlavə Et</h3>
		<ol class="breadcrumb">
			<li><i class="fa fa-home"></i><a href="">Əsas Səhifə</a></li>
			<li><i class="icon_pencil-edit"></i>Xəbərlər</li>
			<li><i class="icon_pencil_alt"></i>Xəbər Əlavə Et</li>
		</ol>
	</div>
</div>
<!-- Title area -->
<form action="" class="form-horizontal" enctype="multipart/form-data" method="POST">
	<section class="panel">
		<div class="panel-body">
			<input name="title" class="form-control input-lg m-bot15" type="text" placeholder="Başlıq">
		</div>
	</section>
	<!-- Clipboard area -->
	<div class="row">
		<div class="col-lg-12">
			<section class="panel">
				<header class="panel-heading">
					Mətn Əlavə Et
				</header>
				<div class="panel-body">
					<div class="col-sm-12">
						<textarea class="form-control ckeditor" name="content" rows="5" cols="5"></textarea>
					</div>
				</div>
			</section>
		</div>
	</div>
	<!-- Tags area -->
	<section class="panel">
		<header class="panel-heading">
			Şəkil Əlavə Et
		</header>
		<div class="panel-body">
			<input type="file" name="image" class="form-control input-lg m-bot15"  placeholder="Şəkil">
		</div>
	</section>
	<!-- Cateqories area -->
	<section class="panel">
		<header class="panel-heading">
			Teq Seçin
		</header>
		<div class="panel-body">
			<div class="form-group">
				<div class="col-lg-12">
					<select name="tag_id" class="form-control input-lg m-bot15">
                        {% for tag in tags %}
                        <option value="{{ tag.id }}">{{ tag.title }}</option>
                        {% endfor %}
					</select>
				</div>
			</div>
		</div>
	</section>
	<!-- Languages area -->
	<section class="panel">
		<header class="panel-heading">
			Dil Seçin
		</header>
		<div class="panel-body">
			<div class="form-group">
				<div class="col-lg-12">
					<select name="language" class="form-control input-lg m-bot15">
						<option value="az">Azerbaijani</option>
						<option value="ru">English</option>
						<option value="en">Russian</option>
						<option value="tr">Turkish</option>
					</select>
				</div>
			</div>
		</div>
	</section>
	<!--Success area-->
	<div class="row">
        <div class="col-md-offset-5 col-md-4">
            <input class="btn btn-success" type="submit" value="Əlavə et"></input>
            <a class="btn btn-danger" href="#">Ləğv et</a>
         </div>
	</div>
</form>
<!--main content end-->
{% endblock %}