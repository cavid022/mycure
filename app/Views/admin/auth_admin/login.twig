  <body class="login-img3-body">

    <div class="container">
    
      <form class="login-form" action="{{ path_for('admin.login.post') }}"  method="post">        
        <div class="login-wrap">
            <p class="login-img"><i class="icon_lock_alt"></i></p>
            {% include 'partials/flash.twig' %}
            <div class="input-group">
              <span class="input-group-addon"><i class="icon_profile"></i></span>
              <input type="email" name="email" value="{{ remember_me.checkEmail }}" class="form-control" placeholder="E-mail">
            </div>
            <div class="input-group">
                <span class="input-group-addon"><i class="icon_key_alt"></i></span>
                <input type="password" name="password" value="{{ remember_me.checkPassword }}" class="form-control" placeholder="Şifrə">
            </div>
            <label class="checkbox">
                <input type="checkbox" name="remember_me" {{ remember_me.checkRememberMe }} > Yadda saxla
                <span class="pull-right"> <a href="#"> Şifrəni unutmusan ?</a></span>
            </label>
            <button class="btn btn-primary btn-lg btn-block" type="submit">Giriş</button>
        </div>
      </form>

  </body>
</html>
