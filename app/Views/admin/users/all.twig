{% extends 'admin/layout.twig' %} 
{% block content %}

    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header"><i class="icon_pencil-edit"></i> İstifadəçilər</h3>
                    <ol class="breadcrumb">
                        <li><i class="fa fa-home"></i><a href="">Əsas Səhifə</a></li>
                        <li><i class="icon_pencil-edit"></i>İstifadəçilər</li>

                    </ol>
                </div>
            </div>

            <!-- Title area -->
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">

                        <table class="table table-striped table-advance table-hover">
                            <tbody>
                            <tr>
                                <th>Adı</th>
                                <th>Soyadı</th>
                                <th>İstifadəçi adı</th>
                                <th>Email</th>
                                <th>Cinsi</th>
                                <th>Doğum Tarixi</th>
                                <th>Milliyəti</th>
                                <th>Telefon</th>
                                <th>Redaktə</th>
                            </tr>

                            {% for user in users %}
                            <tr>
                                <td>{{ user.first_name }}</td>
                                <td>{{ user.last_name }}</td>
                                <td>{{ user.username }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.gender |gender}}</td>
                                <td>{{ user.date_of_birth }}</td>
                                <td>{{ user.nationality }}</td>
                                <td>{{ user.phone }}</td>
                                <td>
                                    <div class="btn-group">
                                        <a class="btn btn-primary" href=""><i class="icon_pencil-edit"></i></a>
                                        <a class="btn btn-danger" href="{{ path_for('admin.users.delete.post', {id: user.id} ) }}"><i class="icon_minus_alt2"></i></a>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
            <!--Pagination area-->
            <section class="panel">
                <div class="panel-body">
                    <div class="text-center">
                        {{ users.links |raw }}
                    </div>
                </div>
            </section>
        </section>
    </section>


{% endblock %}