{% extends 'admin/layout.twig' %} 
{% block content %}

    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header"><i class="icon_pencil-edit"></i> Xəstəliklər</h3>
                    <ol class="breadcrumb">
                        <li><i class="fa fa-home"></i><a href="">Əsas Səhifə</a></li>
                        <li><i class="icon_pencil-edit"></i>Xəstəliklər</li>

                    </ol>
                </div>
            </div>

            <!-- Title area -->
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">

                        <table class="table table-striped table-advance table-hover">
                            <tbody>
                            <tr>
                                <th>Başlıq</th>
                                <th>Mətn</th>
                                <th>Şəkil</th>
                                <th>Redaktə</th>
                            </tr>

                            {% for illness in illnesses %}
                            <tr>
                                <td>{{ illness.title }}</td>
                                <td>{{ illness.content|striptags|raw }}</td>
                                <td><img src="{{ base_url() }}/uploads/illnesses/{{ illness.image }}" style="height: 50px"></img></td>
                                <td>
                                    <div class="btn-group">
                                        <a class="btn btn-primary" href="{{ path_for('admin.illnesses.update', {id: illness.id} ) }}"><i class="icon_pencil-edit"></i></a>
                                        <a class="btn btn-danger" href="{{ path_for('admin.illnesses.delete.post', {id: illness.id} ) }}"><i class="icon_minus_alt2"></i></a>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
            <!--Pagination area-->
            <section class="panel">
                <div class="panel-body">
                    <div class="text-center">
                        {{ illnesses.links |raw }}
                    </div>
                </div>
            </section>
        </section>
    </section>


{% endblock %}