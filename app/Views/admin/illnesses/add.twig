{% extends 'admin/layout.twig' %} 
{% block content %}


<!--main content start-->
<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="icon_folder-open_alt"></i> Xəstəlik Əlavə Et</h3>
                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a href="">Əsas Səhifə</a></li>
                    <li><i class="icon_folder-open_alt"></i>Xəstəliklər</li>
                    <li><i class="icon_folder-open_alt"></i>Xəstəlik Əlavə Et</li>

                </ol>
            </div>
        </div>

        <!-- category_add area -->
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <div class="panel-body">
                        <div class="form">
                            <form class="form-validate form-horizontal" method="post" action="{{ path_for('admin.illnesses.add.post') }}" enctype="multipart/form-data">
                                <div class="form-group ">
                                    <label for="cname" class="control-label col-lg-2">Xəstəlik<span class="required">*</span></label>
                                    <div class="col-lg-10">
                                        <input class="form-control" name="title" minlength="3" type="text" required="" />
                                    </div>
                                </div>

                                <div class="form-group ">
                                    <label for="cname" class="control-label col-lg-2">Xəstəlik haqqında<span class="required">*</span></label>
                                    <div class="col-lg-10">
                                        <div class="row">
                                            <section class="panel">
                                                <header class="panel-heading">
                                                    Mətn Əlavə Et
                                                </header>
                                                <div class="panel-body">
                                                    <div class="col-sm-12">
                                                        <textarea  name="content"  class="form-control ckeditor" name="editor" rows="5" cols="5"></textarea>
                                                    </div>
                                                </div>
                                            </section>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group ">
                                    <label for="cname" class="control-label col-lg-2">Şəkil<span class="required"></span></label>
                                    <div class="col-lg-10">
                                        <input class="form-control" name="image" type="file"  />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-lg-offset-2 col-lg-10">
                                        <input class="btn btn-success" type="submit" value="Əlavə et"></input>
                                        <a class="btn btn-danger" href="#">Ləğv et</a>
                                     </div>
                                </div>
                            </form>
                        </div>

                    </div>
                </section>
            </div>
        </div>
    </section></section>


{% endblock %}